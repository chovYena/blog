---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const defaultImages = [
  'https://images.unsplash.com/photo-1506744038136-46273834b3fb',
  'https://images.unsplash.com/photo-1511884642898-4c92249e20b6',
  'https://images.unsplash.com/photo-1501785888041-af3ef285b470',
  'https://images.unsplash.com/photo-1469474968028-56623f02e42e',
  'https://images.unsplash.com/photo-1433086966358-54859d0ed716'
];
const getRandomImage = () => {
  const imageUrl = defaultImages[Math.floor(Math.random() * defaultImages.length)];
  return `${imageUrl}?auto=format&fit=crop&w=800&q=60`;
};
// 获取和处理博客文章
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort(
  (a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => 
    b.data.date.getTime() - a.data.date.getTime()
);

const INITIAL_POSTS_COUNT = 6;
const initialPosts = sortedPosts.slice(0, INITIAL_POSTS_COUNT);
const postsJson = JSON.stringify(sortedPosts);

---

<div 
  x-data={`{
  posts: [], 
  allPosts: ${postsJson},
  currentCount: ${INITIAL_POSTS_COUNT},

  loading: false,
  init() {
    this.posts = this.allPosts.slice(0, this.currentCount);
  },
  async loadMore() {
    if (this.loading || this.currentCount >= this.allPosts.length) return;
    this.loading = true;
    await new Promise(resolve => setTimeout(resolve, 800));
    const nextPosts = this.allPosts.slice(this.currentCount, this.currentCount + 6);
    this.posts = [...this.posts, ...nextPosts];
    this.currentCount += 6;
    this.loading = false;
  },
  getRandomImage() {
      const defaultImages = [
        'https://images.unsplash.com/photo-1506744038136-46273834b3fb',
        'https://images.unsplash.com/photo-1511884642898-4c92249e20b6',
        'https://images.unsplash.com/photo-1501785888041-af3ef285b470',
        'https://images.unsplash.com/photo-1469474968028-56623f02e42e',
        'https://images.unsplash.com/photo-1433086966358-54859d0ed716'
      ];
     const imageUrl = defaultImages[Math.floor(Math.random() * defaultImages.length)];
     return imageUrl + '?auto=format&fit=crop&w=800&q=60';
  }
  }`}
  class="py-24"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">最新文章</h2>

    <!-- 文章网格 -->
    <div class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">

      <!-- 动态加载的文章 -->
      <template x-for="post in posts" :key="post.id">
        <article class="bg-white dark:bg-gray-800 rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-all duration-300 flex flex-col">
          <a :href="`/posts/${post.slug}`" class="block relative aspect-[16/9] overflow-hidden">
            <img
              :src="post.data.thumbnail || getRandomImage()"
              :alt="post.data.title"
              class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-300"
            />
          </a>
          <div class="p-6 flex-1 flex flex-col">
            <div class="flex-1">
              <time :datetime="post.data.date" 
                    x-text="new Date(post.data.date).toLocaleDateString('zh-CN')"
                    class="text-sm text-gray-500 dark:text-gray-400">
              </time>
              <h3 class="mt-2 text-xl font-semibold text-gray-900 dark:text-white">
                <a :href="`/posts/${post.slug}`" 
                   x-text="post.data.title"
                   class="hover:text-indigo-600 dark:hover:text-sky-400 transition-colors duration-300">
                </a>
              </h3>
              <template x-if="post.data.description">
                <p x-text="post.data.description" 
                   class="mt-3 text-gray-500 dark:text-gray-400 line-clamp-3 overflow-hidden">
                </p>
              </template>
            </div>
            <template x-if="post.data.author">
              <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700">
                <span class="text-sm text-gray-500 dark:text-gray-400" x-text="`作者：${post.data.author}`"></span>
              </div>
            </template>
          </div>
        </article>
      </template>
    </div>

    <!-- 加载更多区域 -->
    <div 
      x-show="currentCount < allPosts.length"
      x-intersect="loadMore"
      class="mt-16 h-20 flex items-center justify-center"
    >
      <div x-show="loading" class="flex items-center space-x-3">
        <div class="w-3 h-3 bg-indigo-600 dark:bg-sky-400 rounded-full animate-bounce"></div>
        <div class="w-3 h-3 bg-indigo-600 dark:bg-sky-400 rounded-full animate-bounce [animation-delay:0.2s]"></div>
        <div class="w-3 h-3 bg-indigo-600 dark:bg-sky-400 rounded-full animate-bounce [animation-delay:0.4s]"></div>
      </div>
      <div x-show="!loading" class="text-gray-500 dark:text-gray-400">
        向下滚动加载更多
      </div>
    </div>

    <!-- 全部加载完毕提示 -->
    <div 
      x-show="currentCount >= allPosts.length" 
      x-cloak
      class="text-center mt-16"
    >
      <p class="text-gray-500 dark:text-gray-400 mb-6">已经到底啦 ~</p>
      <a 
        href="/blog"
        class="group relative inline-flex items-center justify-center px-8 py-3 overflow-hidden font-medium text-indigo-600 dark:text-sky-400 border-2 border-indigo-600 dark:border-sky-400 rounded-full hover:text-white"
      >
        <span class="absolute inset-0 w-full h-full bg-indigo-600 dark:bg-sky-400 group-hover:scale-100 scale-0 transition-transform duration-500 ease-out rounded-full"></span>
        <span class="relative group-hover:text-white transition-colors duration-500 ease-out">
          浏览更多文章
          <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </span>
      </a>
    </div>
  </div>
</div>

<script>

</script>

